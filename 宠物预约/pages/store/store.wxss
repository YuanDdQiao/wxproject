page {
    background-color: #f4f5f6;
    padding: 0;
    height: 100%;
}

.ppg_col {
    padding: 0;
}

.swiper {
    width: 100%;
    height: 100%;
}

.ppg_slide {
    display: block;
    width: 100%;
    height: 100%;
}

.ppg_changeStore {
    background-color: #fff;
    width: 100%;
    padding-left: 22rpx;
    position: relative;
}

.ppg_service {
    background-color: #fff;
    padding: 0;
    border-radius: 20rpx;
    position: relative;
}

.ppg_changeStore image {
    width: 23rpx;
    height: 28rpx;
    margin-top: 26rpx;
    margin-right: 10rpx;
}

.ppg_changeStore text {
    font-size: 22rpx;
    color: #898989;
    margin-top: 20rpx;
}

.changeBtn {
    position: absolute;
    right: 12rpx;
}

.ppg_icon {
    width: 200rpx;
    height: 120rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 37.5%;
}

.ppg_panel {
    text-align: center;
    color: #3A3C4C;
    font-size: 26rpx;
    position: absolute;
    bottom: 27rpx;
    left: 50%;
    transform: translateX(-50%);
}

.address {
    font-size: 22rpx;
    color: #D0D0D0;
    text-align: center;
}