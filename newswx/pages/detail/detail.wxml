<!--pages/detail/detail.wxml-->
<view class="contain">
  <view wx:for="{{newsDetails[0]}}">
    <view class="title_new">
      {{item.title}}
    </view>
    <view class="middle_context">
      <view class="title_new_name">
        {{item.source}}
      </view>
      <view class="title_new_date">
        <!-- {{item.date}} -->
        {{newsDate}}
      </view>
      <view class="title_new_cn">
        阅读 {{item.readCount}}
      </view>
    </view>
    <view class='news_image'>
      <image style="width: 100%;" mode='aspectFill' src="{{item.firstImage}}"></image>
    </view>
    <view class="title_new_context" wx:for="{{item.content}}"> 
      {{item.text}}
    </view>
  </view>

</view>
