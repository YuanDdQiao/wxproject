}
.user-store-items{
  display: flex;
  position: relative;
  flex-shrink: 0;
  align-items: center;
  background-color: white;
  margin: 52rpx auto;
}
.item-image{
  flex-shrink: 0;
  width: 240rpx;
  height: 320rpx;
}
.item-list{
  flex-shrink: 0;
  margin: 0 20rpx;
  position: relative;
  height: 100%;
  width: 100%;
}
.store-title{
  font-size: 33rpx;
  color: #34373D;
  font-weight: bold;
  width: 400rpx;
  margin: 50rpx 0 20rpx 0 ;
}
.store-context{
  flex-shrink: 0;
  height: 50rpx;
  width: 350rpx;
  font-size: 25rpx;
  margin: 20rpx 0 20rpx 0 ;
  /* 自动换行 */
  display: -webkit-box;
  font-size:25rpx;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
