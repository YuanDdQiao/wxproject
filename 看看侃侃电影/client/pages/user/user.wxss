.user-info{
  margin: 0;
  display: flex;
  margin: 20rpx 0 20rpx 0 ;
  flex-shrink: 0;
  align-items: center;
  opacity: 0.9;
  height: 95rpx;
  flex-shrink: 0;
}
.user-head{
  flex-shrink: 0;
  margin: 20rpx 0 20rpx 0 ;
  flex-shrink: 0;
  border-radius: 50%;
  height: 70rpx;
  width: 70rpx;
}
.user-name{
  margin: 50rpx 0 20rpx 10rpx ;
  flex-shrink: 0;
  height: 70rpx;
  width: 70rpx;
  opacity: 0.9;
  font-size: 30rpx;
  text-align: center;
}
.index-result{
  position: fixed;
  border-top:1px solid hsla(189, 19%, 93%, 0.582);
  bottom: 0;
  height: 110rpx;
  width: 100%;
  background-color: white;
}
.result-ctx{
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  text-align: center;
  font-size: 40rpx;
}